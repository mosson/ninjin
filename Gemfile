source 'https://rubygems.org'

gem 'rails', '3.2.11'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'sqlite3'

gem 'haml'
gem 'haml-rails'

gem 'compass'
gem 'compass-rails'

gem 'kaminari'

group :development do
  gem 'hpricot'
  gem 'ruby_parser'
  gem 'erb2haml'
  #gem 'bullet'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'quiet_assets'
end


group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'

  gem 'therubyracer', :platforms => :ruby
  gem 'execjs'

end

gem 'jquery-rails'


# Use unicorn as the app server
gem 'unicorn'

# Deploy with Capistrano
gem 'capistrano'
gem 'capistrano-ext'
gem 'capistrano_colors'
gem 'rvm-capistrano'

# extract-errors
gem "net-ssh"
